#!/usr/bin/env ruby
require_relative '../lib/turn'

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
while valid_move?(board, index) == false
turn(board)
input = gets.strip.to_i
input_to_index(input)
index = input - 1

move(board, index, value = "X")
end
display_board(board)
